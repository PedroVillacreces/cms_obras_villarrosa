@inherits UmbracoTemplatePage

@*it's a contact form to contact us*@

<section class="container" id="form">
    <h2>TIENES ALGUNA DUDA? PREGUNTANOS!</h2>
    <form class="form-horizontal">
        <div class="form-group">
            <label for="iname" class="col-sm-2 control-label">Nombre Completo</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="name" placeholder="Nombre Completo">
            </div>
        </div>
        <div class="form-group">
            <label for="inputEmail3" class="col-sm-2 control-label">Email</label>
            <div class="col-sm-10">
                <input type="email" class="form-control" id="inputEmail3" placeholder="Email">
            </div>
        </div>
        <div class="form-group">
            <label for="inputEmail3" class="col-sm-2 control-label">Comentarios</label>
            <div class="col-sm-10">
                <textarea  style="border:1px solid black;" class="form-control" rows="3"></textarea>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button style="background-color: black; color:white;" type="submit" class="btn btn-default">Enviar</button>
            </div>
        </div>
    </form>
</section>
<div>
    <svg style="display:block; height: auto; width: 100%;" viewBox="0 0 1170 168">
        <path transform="matrix(1,0,0,1,-40,0)" style="height: auto; width: 100%;" data-svg-origin="30 0" d="M1217.74167,0 L1217.74167,169.112261 L30,169.112261 L1217.74167,0 Z" />
    </svg>
</div>